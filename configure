#!/bin/sh

fullname=`readlink -f $0`
basedir=`dirname "$fullname"`
suffix=`uname``uname -m`
cmake -H"$basedir" -B"$basedir/build$suffix"

cat > Makefile << EOF
all:
	\$(MAKE) -C $basedir/build$suffix

docs:
	\$(MAKE) -C $basedir/build$suffix docs
	
%:
	\$(MAKE) -C $basedir/build$suffix \$@

.PHONY: docs

EOF
